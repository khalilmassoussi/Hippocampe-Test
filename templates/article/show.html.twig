{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="blog-single gray-bg">
        <div class="container">
            <div class="row align-items-start">
                <div class="col-lg-8 m-15px-tb">
                    <article class="article">
                        <div class="article-img">
                            <img src="https://via.placeholder.com/800x350/87CEFA/000000" title="" alt="">
                        </div>
                        <div class="article-title">
                            <h2>{{ article.titre }}</h2>
                            <div class="media">

                                <div class="media-body">
                                    <span>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="article-content">
                            {{ article.contenu }}
                        </div>
                        <div class="nav tag-cloud">
                            {% for tag in article.categories %}
                                <a href="#">{{ tag }}</a>
                            {% endfor %}
                        </div>
                    </article>
                    <div class="contact-form article-comment">
                        <h4>Commentaire</h4>
                        {% for commentaire in commentaires %}
                            <div class="card p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="user d-flex flex-row align-items-center">
                                        <span>
                                            <small class="font-weight-bold text-primary">{{ commentaire.pseudo }}</small>
                                            <small class="font-weight-bold">{{ commentaire.message|raw }}</small></span>
                                    </div>
                                    <small>{{ commentaire.date ? commentaire.date|date('Y-m-d H:i:s') : '' }}</small>
                                </div>
                            </div>
                        {% endfor %}

                        <form id="contact-form" method="POST">
                            <div class="row">
                                {{ form_start(form) }}

                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.pseudo,  {'attr': {'class': 'form-control','placeholder': 'Pseudo'}}) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.message,  {'attr': {'class': 'form-control', 'placeholder': 'Message'}}) }}
                                    </div>
                                </div>
                                <div class="col-md-12">

                                </div>
                                <div class="col-md-12">
                                    <div class="send">
                                        <button class="px-btn theme">
                                            <span>{{ button_label|default('Enregistrer') }}</span> <i class="arrow"></i>
                                        </button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
